  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  
  # Other
  pod 'SDWebImage'
  pod 'JGProgressHUD'
  pod 'SwiftyCam'
  pod 'Digger'
  pod 'NVActivityIndicatorView'
  pod 'ColorSlider'
  
end
